@model Review
@{
    var i = (ViewContext.RouteData.Values["id"]);
    Model.RecipeId = Convert.ToInt32(i);  // if there is no review, we nedd Recipe_ID
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
<script src="~/lib/bootstrap/js/rating.js"></script>

<form class="p-a-1" asp-action="RecipeReview" asp-controller="Home" method="post">
    <div style="padding-left: 75px;" asp-validation-summary="All"></div>
    <div class="ingDiv">
        <div class="hTitle">
            POST YOUR REVIEW
        </div>
        <div class="ingDiv">
            <div style="padding:25px; border: solid 1px Orange; border-radius: 5px">
                <div>
                    <input asp-for="RecipeId" hidden="hidden"/>
                    <div>
                        <input asp-for="Name" class="form-control" placeholder="Your Name ..." />
                    </div>
                    <br />
                    <div>
                        <input asp-for="Title" class="form-control" placeholder="Title of your review ..." />
                    </div>
                    <br />
                    <div>
                        <textarea asp-for="Note" rows="5" class="form-control" placeholder="Type your review here ..."></textarea>
                    </div>
                    <br />
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 col-md-6" style="font-size: 1.5em;">
                                <p>Rate the recipe:</p>
                                <div id="review"></div>
                                <input asp-for="Rate" id="starsInput" hidden="hidden" />
                            </div>
                        </div>
                    </div>

                    <br />
                    <div style="text-align:center">
                        <button type="submit" class="btn btn-success">&nbsp;Post&nbsp;</button>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    $("#review").rating({
        "value": 0,
        "click": function (e) {
            console.log(e);
            $("#starsInput").val(e.stars);
        }
    });
</script>

