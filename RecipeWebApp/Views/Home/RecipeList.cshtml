@model IEnumerable<Recipe>
@{
    ViewBag.Title = "Recipes List";
    Layout = "_Layout";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-success mt-1">@TempData["message"]</div>
}

<form asp-action="RecipeView" asp-controller="Home" method="post">
</form>
<div class="panel-body">
    <br />
    <div class="hTitle">
        LIST of RECIPES
    </div>
    <table class="table table-sm table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Code</th>
                <th>Culture</th>
                <th>Category</th>
                <th>Recipe Title</th>
                <th>Chef</th>
                <th>&nbsp;View&nbsp;</th>
                <th>&nbsp;Edit&nbsp;</th>
                <th>Review</th>
                <th>Rate</th>
            </tr>
        </thead>
        @foreach (Recipe r in Model)
        {
            @await Html.PartialAsync("_RecipeRow", r)
        }
    </table>
</div>
